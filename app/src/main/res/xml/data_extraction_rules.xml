<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include audio library files -->
        <include domain="file" path="imported_audio/"/>
        <include domain="file" path="shadow_segments/"/>
        
        <!-- Include Vosk models -->
        <include domain="file" path="vosk_models/"/>
        
        <!-- Include database files -->
        <include domain="database" path="."/>
        
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="."/>
        
        <!-- Note: By default, only the explicitly included paths above are backed up.
             All other files (logs/, crash_reports/, cache, etc.) are automatically excluded. -->
    </cloud-backup>
    
    <device-transfer>
        <!-- Same rules for device transfer -->
        <include domain="file" path="imported_audio/"/>
        <include domain="file" path="shadow_segments/"/>
        <include domain="file" path="vosk_models/"/>
        <include domain="database" path="."/>
        <include domain="sharedpref" path="."/>
        
        <!-- Note: By default, only the explicitly included paths above are transferred.
             All other files are automatically excluded. -->
    </device-transfer>
</data-extraction-rules>
